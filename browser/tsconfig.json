{
  "include": [
    "../locale",
    "../src",
    "../test"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../build",
    "removeComments": false,
    "skipLibCheck": false,
    "strictNullChecks": false,
    "target": "ES6"
  }
}
